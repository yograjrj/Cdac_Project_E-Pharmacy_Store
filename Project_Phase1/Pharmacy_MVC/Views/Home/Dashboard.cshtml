@model Pharmacy_MVC.Models.Dashboard

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/Master.cshtml";
}

<div class="jumbotron text-center" style="background-color: #f7f7f7; padding: 60px;">
    <h1 class="alert-info">Dashboard</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4 class="alert-success text-center">@ViewBag.msg</h4>
        </div>
    </div>
</div>

<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header" style="justify-content:center; justify-items:center; display:flex">
                    <h2>Total Orders</h2>
                </div>
                <div class="card-body" style="justify-content:center; justify-items:center; display:flex">
                    <h1>@Model.OrderList.Count()</h1>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-header" style="justify-content:center; justify-items:center; display:flex">
                    <h2>Inventory Status</h2>
                </div>
                <div class="card-body" style="justify-content:center; justify-items:center; display:flex">
                    <h1>@Model.ProductList.Count()</h1>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-header" style="justify-content:center; justify-items:center; display:flex">
                    <h2>Orders Delivered</h2>
                </div>
                <div class="card-body" style="justify-content:center; justify-items:center; display:flex">
                    <h1>@Model.OrderList.Where(o => o.OrderStatus.Equals("DELIVERED")).Count()</h1>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-header" style="justify-content:center; justify-items:center; display:flex">
                    <h2>Total Users </h2>
                </div>
                <div class="card-body" style="justify-content:center; justify-items:center; display:flex">
                    <h1>@Model.UserList.Count()</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<hr />